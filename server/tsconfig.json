{
  "compilerOptions": {
    "target": "es6",
    "module": "nodenext",
    "rootDir": "./",
    "moduleResolution": "nodenext",
    "paths": {
      "@*": ["./*"]
    },
    "typeRoots": ["./node_modules/@types", "./types"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipDefaultLibCheck": false,
    "skipLibCheck": false
  }
}
